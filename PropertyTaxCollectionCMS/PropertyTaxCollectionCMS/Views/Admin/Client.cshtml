@model PropertyTaxCollectionCMS.Bll.ViewModels.Admin.ClientVM
@{
    ViewBag.Title = "Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/theme-assets/assets/pages/jquery.filer/css/themes/jquery.filer-dragdropbox-theme.css" rel="stylesheet" />
<link href="~/Content/theme-assets/assets/pages/jquery.filer/css/jquery.filer.css" rel="stylesheet" />
<style>
    .textarea {
        height: 130px;
    }
</style>
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="row align-items-end">
                    <div class="col-lg-8">
                        <div class="page-header-title">
                            <div class="d-inline">
                                <h4>Client Registration</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="index-1.htm"> <i class="feather icon-home"></i> </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Admin</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Client</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm("Client", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.AppId);

                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">

                            <!-- Input Grid card start -->
                            <div class="card">

                                <div class="card-block">
                                    <h4 class="sub-title">Add Client</h4>
                                    <form>
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Name</label>
                                                @Html.TextBoxFor(model => model.AppName, new { @class = "form-control", required = "required", placeholder = "Name Here", type = "text" })
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Name Marathi</label>
                                                @Html.TextBoxFor(model => model.AppName_mar, new { @class = "form-control", required = "required", placeholder = "Name Marathi", type = "text" })
                                            </div>

                                            <div class="col-sm-6">
                                                @Html.LabelFor(m => m.State, new { @class = "col-form-label" })
                                                @Html.DropDownListFor(model => model.State, Model.StateList, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-sm-6">
                                                @Html.LabelFor(m => m.District, new { @class = "col-form-label" })
                                                @Html.DropDownListFor(model => model.District, Model.DistrictList, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-sm-6">
                                                @Html.LabelFor(m => m.Tehsil, new { @class = "col-form-label" })
                                                @Html.DropDownListFor(model => model.Tehsil, Model.TehsilList, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.Tehsil, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="col-form-label">Email Id</label>
                                                @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", required = "required", placeholder = "Email Id", type = "text" })
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Website</label>
                                                @Html.TextBoxFor(model => model.website, new { @class = "form-control", required = "required", placeholder = "Website Here", type = "text" })
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Base Image Url CMS</label>
                                                @Html.TextBoxFor(model => model.baseImageUrlCMS, new { @class = "form-control", required = "required", placeholder = "Base Image Url CMS", type = "text" })
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="col-form-label">Base Image Url</label>
                                                @Html.TextBoxFor(model => model.baseImageUrl, new { @class = "form-control", required = "required", placeholder = "Base Image Url", type = "text" })
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="col-form-label">Base Path</label>
                                                @Html.TextBoxFor(model => model.basePath, new { @class = "form-control", required = "required", placeholder = "Base Path", type = "text" })
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="col-form-label">Latitude</label>
                                                @Html.TextBoxFor(model => model.Latitude, new { @class = "form-control", required = "required", placeholder = "Latitude", type = "text" })
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="col-form-label">Longitude</label>
                                                @Html.TextBoxFor(model => model.Logitude, new { @class = "form-control", required = "required", placeholder = "Longitude", type = "text" })
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="col-form-label">App Version</label>
                                                @Html.TextBoxFor(model => model.AppVersion, new { @class = "form-control", required = "required", placeholder = "App Version", type = "text" })
                                            </div>

                                            @*<div class="col-sm-6">
                                                @Html.LabelFor(m => m.LanguageId, new { @class = "col-form-label" })
                                                @Html.DropDownListFor(model => model.LanguageId, Model.LanguageList, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                                            </div>*@

                                            <div class="col-sm-3">
                                                @Html.CheckBox("IsActive", new { @class = "checkbox-color checkbox-default", type = "checkbox" })
                                                <label class="col-form-label">Is Active</label>
                                            </div>

                                            <div class="col-sm-3">
                                                @Html.CheckBox("ForceUpdate", new { @class = "checkbox-color checkbox-default", type = "checkbox" })
                                                <label class="col-form-label">Force Update</label>
                                            </div>
                                            
                                            @*<div class="col-sm-2">
                                                <input class="form-control" value="@ViewBag.ReferenceID" id="n" readonly="readonly" />
                                            </div>*@

                                        </div>

                                        <div class="col-sm-12">
                                            <br />
                                            <button type="submit" class="btn btn-custom">Submit</button>
                                            <a href="ClientList" type="button" class="btn btn-custom">Cancel</a>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <!-- Input Grid card end -->
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <!-- Main-body end -->
</div>


<script src="~/Content/theme-assets/assets/pages/jquery.filer/js/jquery.filer.min.js"></script>
<script src="~/Content/theme-assets/assets/pages/filer/custom-filer.js"></script>
<script src="~/Content/theme-assets/assets/pages/filer/jquery.fileuploads.init.js"></script>

